@model TemporadaVM

@{
    ViewData["Title"] = "Editar";
    var listaSiNo = new SelectList(new List<string> { "SI", "NO" });
    var listaEstadosTemporada = new SelectList(new List<string> { "UnderConstruction", "EnJuego", "Finalizada", "EnPretemporada", "Cerrada" });
}
<div class="card m-3 p-2">
    <div class="row">
        <form asp-action="Edit">
            @Html.HiddenFor(model => model.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Temporada" class="control-label"></label>
                    <input asp-for="Temporada" class="form-control" />
                    <span asp-validation-for="Temporada" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    @Html.DropDownListFor(model => model.Estado, listaEstadosTemporada, "Seleccionar...", new { @class = "form-control custom-select" })
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Actual" class="control-label"></label>
                    @Html.DropDownListFor(model => model.Actual, listaSiNo, "Seleccionar...", new { @class = "form-control custom-select" })
                    <span asp-validation-for="Actual" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary m-3" />
            </div>
        </form>
    </div>
</div>
<div class="m-3">
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}