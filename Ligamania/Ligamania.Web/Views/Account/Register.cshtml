@model RegisterVM
@{
    ViewData["Title"] = "Registro de usuario";
    var listaSiNo = new SelectList(new List<string> { "SI", "NO" });
    var listaCateg = new SelectList(new List<string> { "Silver A", "Silver B", "Sin Preferencia" });
}

<div class="card m-3 p-2">
    <h5 class="card-header">Por favor, rellena este formulario con tus datos. Recibirás un correo para validar el registro</h5>
    <h5 class="card-header">Cuando Ligamanía te confirme como <strong>entrenador</strong>, recibirás un correo de confirmación</h5>
    <div class="card-body">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div col-5>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div col-5>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Conocimiento"></label>
                    <input asp-for="Conocimiento" class="form-control" />
                    <span asp-validation-for="Conocimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StrWhats"></label>
                    @Html.DropDownListFor(model => model.StrWhats, listaSiNo, "Seleccionar...", new { @class = "custom-select" })
                    <span asp-validation-for="StrWhats" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Equipo"></label>
                    <input asp-for="Equipo" class="form-control" />
                    <span asp-validation-for="Equipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoriaPreferida"></label>
                    @Html.DropDownListFor(model => model.CategoriaPreferida, listaCateg, "Seleccionar...", new { @class = "custom-select" })
                    <span asp-validation-for="CategoriaPreferida" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary m-3">Registrar</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}