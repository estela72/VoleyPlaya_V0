@model ClubListVM

@{
    var listaSiNo = new SelectList(new List<string> { "SI", "NO" });

    ViewData["Title"] = "Lista de clubs";
    var clubs = Model.clubs;
    var club = Model.nuevoClub;
    var primera = clubs.FirstOrDefault();
    var col = "collapse";
    if (Model.Error) { col = "show"; }
    var colHor = String.Concat(col, " collapse-horizontal");
}

<div class="card m-3 card-filter p-2">
    <div class="card-header">
        <div class="btn-group m-2">
            <button type="button" class="btn-info m-2" data-bs-toggle=@col data-bs-target="#collapseNuevoClub" aria-expanded="false" aria-controls="collapseNuevoClub">Nuevo club</button>
        </div>
    </div>
    <div class=@colHor id="collapseNuevoClub">
        <div class="card card-body">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label class="control-label">Nombre: </label>
                    <input id="nombre" name="nombre" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Alias: </label>
                    <input id="alias" name="alias" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Baja: </label>
                    @Html.DropDownList("baja", listaSiNo, "Seleccionar...", new { @class = "form-control custom-select" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary m-2" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card m-3">
    <div class="card-header">
        <div class="card-title">Clubs</div>
    </div>
    <div class="card-body">
        <table class="display" id="tbClubs">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => primera.Club)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => primera.Alias)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => primera.Baja)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/club.js"></script>
}