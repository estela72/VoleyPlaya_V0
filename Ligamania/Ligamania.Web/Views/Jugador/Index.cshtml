@model JugadorListVM

@{
    var listaSiNo = new SelectList(new List<string> { "SI", "NO" });

    ViewData["Title"] = "Lista de jugadores";
    var jugadores = Model.jugadores;
    var club = Model.nuevoJugador;
    var primera = jugadores.FirstOrDefault();
    var col = "collapse";
    if (Model.Error) { col = "show"; }
    var colHor = String.Concat(col, " collapse-horizontal");
}

<div class="card m-3 card-filter p-2">
    <div class="card-header">
        <div class="btn-group m-2">
            <button type="button" class="btn-info m-2" data-bs-toggle=@col data-bs-target="#collapseNuevoJugador" aria-expanded="false" aria-controls="collapseNuevoJugador">Nuevo jugador</button>
        </div>
    </div>
    <div class=@colHor id="collapseNuevoJugador">
        <div class="card card-body">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label class="control-label">Nombre: </label>
                    <input id="nombre" name="nombre" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Baja: </label>
                    @Html.DropDownList("baja", listaSiNo, "Seleccionar...", new { @class = "form-control custom-select" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary m-2" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card m-3">
    <div class="card-header">
        <div class="card-title">Jugadores</div>
    </div>
    <div class="card-body">
        <table class="display" id="tbJugadores">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => primera.Jugador)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => primera.Baja)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/jugador.js"></script>
}