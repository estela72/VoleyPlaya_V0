<ul class="nav nav-tabs" id="calendarioTab" role="tablist">
        @{
            var ind = 0;
            foreach (var calendario in calendarios)
            {
                var idTab = calendario.Competicion + "-tab";
                var href = "#" + calendario.Competicion;
                var aria = calendario.Competicion;
                <li class="nav-item">
                    @if (ind == 0)
                    {
                        <a class="nav-link" id=@idTab data-toggle="tab" href=@href role="tab" aria-controls=@aria aria-selected="false">@calendario.Competicion</a>
                    }
                    else
                    {
                        <a class="nav-link" id=@idTab data-toggle="tab" href=@href role="tab" aria-controls=@aria aria-selected="false">@calendario.Competicion</a>
                    }
                </li>
                ind++;
            }
        }
    </ul>
<!-- Tab panes -->
<div class="tab-content">
        @foreach (var calendario in calendarios)
        {
            var idTab = calendario.Competicion + "-tab";
            var href = "#" + calendario.Competicion;
            var aria = calendario.Competicion;
            var ind1 = 0;
            @if (ind1 == 0)
            {
                <div class="tab-pane fade" id=@aria role="tabpanel" aria-labelledby=@idTab>
                    @await Html.PartialAsync("_calendarioCompeticion", calendario.Categorias,
                                            viewData: new ViewDataDictionary(ViewData) { { "competicion", calendario.Competicion } })
                </div>
            }
            else
            {
                <div class="tab-pane fade" id=@aria role="tabpanel" aria-labelledby=@idTab>
                    @await Html.PartialAsync("_calendarioCompeticion", calendario,
                                            viewData: new ViewDataDictionary(ViewData) { { "competicion", calendario.Competicion } })
                </div>
            }
            ind1++;
        }
    </div>
<script>
    $('#calendarioTab a').on('click', function (e) {
        e.preventDefault()
        $(this).tab('show')
    });

    $(function () {
        $('#calendarioTab li:first-child a').tab('show')
    })
</script>
