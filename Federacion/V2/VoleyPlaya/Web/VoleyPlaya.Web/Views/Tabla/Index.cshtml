@model IEnumerable<VoleyPlaya.Web.Models.Tabla>

@{
    ViewData["Title"] = "Index";
}

<h1>Tablas</h1>

<p>
    <a asp-action="Create">Nueva tabla</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ronda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipo1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipo2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ronda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipo1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipo2)
                </td>
                <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Detalles", "Details", new {  id=item.Id }) |
                @Html.ActionLink("Borrar", "Delete", new {  id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
