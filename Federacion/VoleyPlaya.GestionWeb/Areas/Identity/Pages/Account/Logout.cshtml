@page
@model LogoutModel
@{
    ViewData["Title"] = "Salir de sesión";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity!.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-white">Pulsa aquí para abandonar la sesión</button>
            </form>
        }
        else
        {
            <p>Has salido de sesión con éxito</p>
        }
    }
</header>