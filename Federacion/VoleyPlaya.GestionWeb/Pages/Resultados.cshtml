                            @disabled="disabled", @onchange="applyFilter()"})
                            }
                            else
                            {
                                @Html.DropDownListFor(m=>@Model.CategoriaSelected, @Model.Categorias, "Seleccione una categoría", new{@class="form-control", id = "categoria-select",
                            @onchange="applyFilter()"})
                            }
